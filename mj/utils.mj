pusher(r[0-4], w:[word], regsIn[16-31]:[word]) = (regsOut[16-31]:[word]) where
  regsOut16 = mux_n<word>(w, regsIn16, (not r1) and (not r2) and (not r3) and (not r4));
  regsOut17 = mux_n<word>(w, regsIn17, (not r1) and (not r2) and (not r3) and r4);
  regsOut18 = mux_n<word>(w, regsIn18, (not r1) and (not r2) and r3 and (not r4));
  regsOut19 = mux_n<word>(w, regsIn19, (not r1) and (not r2) and r3 and r4);
  regsOut20 = mux_n<word>(w, regsIn20, (not r1) and r2 and (not r3) and (not r4));
  regsOut21 = mux_n<word>(w, regsIn21, (not r1) and r2 and (not r3) and r4);
  regsOut22 = mux_n<word>(w, regsIn22, (not r1) and r2 and r3 and (not r4));
  regsOut23 = mux_n<word>(w, regsIn23, (not r1) and r2 and r3 and r4);
  regsOut24 = mux_n<word>(w, regsIn24, r1 and (not r2) and (not r3) and (not r4));
  regsOut25 = mux_n<word>(w, regsIn25, r1 and (not r2) and (not r3) and r4);
  regsOut26 = mux_n<word>(w, regsIn26, r1 and (not r2) and r3 and (not r4));
  regsOut27 = mux_n<word>(w, regsIn27, r1 and (not r2) and r3 and r4);
  regsOut28 = mux_n<word>(w, regsIn28, r1 and r2 and (not r3) and (not r4));
  regsOut29 = mux_n<word>(w, regsIn29, r1 and r2 and (not r3) and r4);
  regsOut30 = mux_n<word>(w, regsIn30, r1 and r2 and r3 and (not r4));
  regsOut31 = mux_n<word>(w, regsIn31, r1 and r2 and r3 and r4)
end where

push_register(d:[reg_addr], w:[word], regsIn[16-31]:[word]) = (regsOut[16-31]:[word]) where
  d0 = d[0];
  d1 = d[1];
  d2 = d[2];
  d3 = d[3];
  d4 = d[4];

  (regsOut[16-31]) = pusher(d[0-4], w, regsIn[16-31])
end where

poper(r[0-4], regs[16-31]:[word]) = (w:[word]) where
  w = mux_n<word>( mux_n<word>( mux_n<word>( mux_n<word>(regs31, regs30, r4),
                                             mux_n<word>(regs29, regs28, r4),
					     r3),
			  	mux_n<word>( mux_n<word>(regs27, regs26, r4),
				             mux_n<word>(regs25, regs24, r4),
					     r3),
				r2),
		   mux_n<word>( mux_n<word>( mux_n<word>(regs23, regs22, r4),
		                             mux_n<word>(regs21, regs20, r4),
					     r3),
			        mux_n<word>( mux_n<word>(regs19, regs18, r4),
				             mux_n<word>(regs17, regs16, r4),
					     r3),
                                r2),
		   r1)
end where

pop_register(raddr:[reg_addr], regs[16-31]:[word]) = (w:[word]) where
  r0 = raddr[0];
  r1 = raddr[1];
  r2 = raddr[2];
  r3 = raddr[3];
  r4 = raddr[4];

  w = poper(r[0-4], regs[16-31])
end where

increase<n>(RIn:[n]) = (ROut:[n]) where	(*  simple increase *)
  o = one<n>();
  (ROut, c) = nadder<n>(RIn, o, 0);
end where

iincrease<n>(RIn:[n]) = (ROut:[n]) where	(*  double increase *)
  two = one<n-1>().0;
  (ROut, c) = nadder<n>(RIn, two, 0);
end where

decrease<n>(RIn:[n]) = (ROut:[n]) where 	(*  simple decrease *)
  o = one<n>();
  (ROut, c) = nsubber<n>(RIn, o, 0);
end where

getBit(wire:[word], s0, s1, s2) = (r) where
  r = mux( mux( mux(wire[7], wire[6], s2),
                mux(wire[5], wire[4], s2),
                s1),
           mux( mux(wire[3], wire[2], s2),
	        mux(wire[1], wire[0], s2),
                s1),
           s0)
end where


push_stack(SPIn:[ram_addr_size], w:[word]) = (SPOut:[ram_addr_size]) where
  (* o = ram<addr_size, word_size>(read_addr, write_enable, write_addr, write_data); *)
  o = ram<ram_addr_size, word>(SPIn, 1, SPIn, w);

  (*  decrease SP by the right amount *)
  SPOut = decrease<ram_addr_size>(SPIn);

end where

pop_stack(SPIn:[ram_addr_size]) = (SPOut:[ram_addr_size], o:[word]) where
  (* o = ram<addr_size, word_size>(read_addr, write_enable, write_addr, write_data); *)
  o = ram<ram_addr_size, word>(SPIn, 0, SPIn, zero<word>());

  SPOut = increase<ram_addr_size>(SPIn);
end where
